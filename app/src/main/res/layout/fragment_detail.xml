<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_detail_top"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/color_code_4"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/btn_detail_back"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="35dp"
                        android:text="뒤로가기"
                        android:gravity="center"
                        android:background="@drawable/btn_normal"
                        android:textColor="@color/white"
                        style="@style/text20.bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_detail_edit"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="35dp"
                        android:text="수정"
                        android:gravity="center"
                        android:background="@drawable/btn_normal"
                        android:textColor="@color/white"
                        style="@style/text20.bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_detail_top">

                <ImageView
                    android:id="@+id/iv_detail_person"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/call_logo" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_detail_star"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/star_empty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_detail_top" />

            <TextView
                android:id="@+id/btn_detail_call"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="CALL"
                android:gravity="center"
                android:background="@drawable/btn_normal"
                android:textColor="@color/white"
                style="@style/text20.bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_detail_message"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_img" />

            <TextView
                android:id="@+id/btn_detail_message"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:text="MESSAGE"
                android:gravity="center"
                android:background="@drawable/btn_normal"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                style="@style/text20.bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_detail_call"
                app:layout_constraintTop_toBottomOf="@+id/view_img" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_detail_call"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        style="@style/text17.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>
                    <TextView
                        android:id="@+id/tv_detail_name_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OOO"
                        style="@style/text20.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_detail_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_detail_name"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화"
                        style="@style/text17.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>
                    <TextView
                        android:id="@+id/tv_detail_mobile_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000-0000-0000"
                        style="@style/text20.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_detail_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_detail_mobile"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        style="@style/text17.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>
                    <TextView
                        android:id="@+id/tv_detail_email_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000@0000.com"
                        style="@style/text20.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_detail_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_detail_email"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알림"
                        style="@style/text17.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>
                    <TextView
                        android:id="@+id/tv_detial_event_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30분 뒤 발신 알람"
                        style="@style/text20.bold"
                        android:padding="10dp"
                        android:paddingStart="50dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>